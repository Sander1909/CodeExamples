import openai
import requests
from io import BytesIO
from PIL import Image

import cv2

openai.api_key = ""

# Generate an image of a cat
response = openai.Image.create(
    prompt="a close up, studio photographic portrait of a white siamese cat that looks curious, backlit ears",
    n=1,
    size="1024x1024",
    response_format="url"
)

# Convert the image URL to an image object
image_data = requests.get(response["data"][0]["url"]).content
image = Image.open(BytesIO(image_data))
image.save("generated_image.jpg")

cv2img = cv2.imread("generated_image.jpg")

cv2.namedWindow("Image", cv2.WINDOW_NORMAL)
cv2.setWindowProperty("Image", cv2.WND_PROP_FULLSCREEN, cv2.WINDOW_FULLSCREEN)

cv2.imshow("Image", cv2img)

cv2.waitKey(0)
cv2.destroyAllWindows()

